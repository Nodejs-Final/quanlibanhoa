<html xmlns="http://www.w3.org/1999/xhtml">
    <main class="p-3">
      <a href="/loaihoa/create">
        <button class="btn btn-success mb-2">Thêm mới</button>
      </a>
      <table class="table table-striped p-5" width="80%" border="0" cellpadding="0" cellspacing="0" bgcolor="#FFFFFF">
        <thead class="thead-light">
          <tr>
            <th>#</th>
            <th>Mã loại</th>
            <th>Tên loại</th>
            <th>Thao tác</th>
          </tr>
        </thead>
        
        <% for(var i=0; i < loaihoas.length; i++) { %>
          <tr>
            <th> <%= i+1 %>  </th>
            <td> <%=loaihoas[i].maloai %> </td>
            <td> <%=loaihoas[i].tenloai %> </td>
            <td class="d-flex">
              <a class="mr-2" href="/loaihoa/update/<%= loaihoas[i]._id %>">
                <button class="btn btn-primary">Sửa</button>
              </a>
              <a class="mr-2" href="/loaihoa/delete/<%= loaihoas[i]._id %>">
                <button class="btn btn-danger">Xóa</button>
              </a>
            </td>
          </tr>
        <% } %>
      </table>
    </main>