<html xmlns="http://www.w3.org/1999/xhtml"> 
    <main>
      <table class="mt-1" width="100%" border="0" cellpadding="0" cellspacing="0" bgcolor="#FFFFFF">
          <tr bgcolor="#F4FBEB">
              <td valign="top" bgcolor="#F4FBEB" style="width: 250px;">
                  <div class="list-group m-1">
                      {{#each loaihoa}}
                          <a href="/fill?name={{this.maloai}}" class="text-dark list-group-item list-group-item-action">
                            <i class="fas fa-fan"></i>
                            <b>
                                {{this.tenloai}}
                            </b>
                          </a>
                        {{/each}}
                  </div>
                  
                  {{!-- <hr class="m-2"> --}}
                  {{!-- <div class="m-1 p-1 card">
                    <p><b>Giỏ hàng của bạn</b></p>
                    <p><b>Số lượng:</b> </p>
                    <p><b>Tổng tiền:</b>  VND  </p>
                    <a href="/cart" class="btn btn-success text-white">Đến giỏ hàng</a>
                  </div> --}}
                  
              </td>
              <td colspan="3" valign="top" bgcolor="#FFFFFF">
                  {{#if flowers}}
                    <div class="container">
                    <div class="row">
                    {{#each flowers}}
                    <div class="col-sm-3 mt-4">
                        <div class="card" style="width: 12rem;">
                        <img src="images/{{this.image}}" class="card-img-top" alt="" style="height:180px">
                        <div class="card-body">
                            <h5 class="card-title"><a href="/page-detail/{{this._id}}" style="text-decoration:none">{{this.name}}</a></h5>
                            <p class="card-text">{{this.price}}</p>
                            <div class="d-flex flex-row align-items-center">
                              <a href="/page-detail/{{this._id}}" class="btn btn-outline-success">Xem Thêm</a>
                              <a href="/addCart/{{this._id}}"><i class="fas fa-shopping-cart ml-1" style="font-size:25px"></i></a>
                            </div>
                        </div>
                        </div>
                    </div>
                    {{/each}}
                    </div>
                    </div>
                  {{else}}
                    <h1>Không tìm thấy hoa</h1>
                  {{/if}}
                  </table>
              </td>
          </tr>
      </table>
    </main>
    
