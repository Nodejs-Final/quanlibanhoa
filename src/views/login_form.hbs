<html xmlns="http://www.w3.org/1999/xhtml">
  <head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <title>Cua hang Hoa Dep</title>
    <link href="./css/index.css" rel="stylesheet" />
    <link
      rel="stylesheet"
      href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css"
    />
    <link
      rel="stylesheet"
      href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css"
    />
  </head>

  <body style="display: flex; justify-content: center; align-items: center;">
    <div class="container w-auto p-4" style="min-width: 400px; background-color: #ecebfd; border-radius: 0.5rem;">
      <form id="form1" name="form1" method="post" action="/login" style="font-size: 1.25rem;">
        <div align="center" style="font-size: 2.5rem;">Đăng nhập</div>
        <div class="form-group">
          <label for="username">Tên đăng nhập</label>
          <input name="name" type="text" id="ten_dn" class="form-control" />
        </div>
        <div class="form-group">
          <label for="password">Mật khẩu</label>
          <input
            type="password"
            name="password"
            id="mat_khau"
            class="form-control"
          />
        </div>
        <div style="display: flex; flex-direction: column; align-items: center;">
          <button type="submit" class="btn btn-primary w-100">Đăng nhập</button>
          <div style="font-size: 1rem;">
            Chưa có tài khoản <a href="/register"class="text-danger">Đăng ký</a>
          </div>
          <a href="/"class="text-primary" style="font-size: 1rem;">Quay lại trang chủ</a>
        </div>
      </form>
    </div>
  </body>
</html>
