<html xmlns="http://www.w3.org/1999/xhtml">
    
    <main class="p-3">
      <a href="/create" >
        <button class="btn btn-success mb-2">Thêm mới</button>
      </a>
      <table class="table table-striped p-5" width="80%" border="0" cellpadding="0" cellspacing="0" bgcolor="#FFFFFF">
        <thead class="thead-light" >
          <tr class="tb-sticky">
            <th>STT</th>
            <th>Tên hoa</th>
            <th>Mã loại</th>
            <th>Giá bán</th>
            <th>Hình</th>
            <th>Mô tả</th>
            <th>Thao tác</th>
          </tr>
        </thead>
        
        {{#each flowers}}
          <tr>
            <th>{{ sum @index 1}}</th>
            <td> {{this.name}} </td>
            <td> {{this.category}} </td>
            <td> {{this.price}} </td>
            <td> <img src="/images/{{this.image}}" alt="ảnh hóa"> </td>
            <td> {{this.description}}</td> </td>
            <td class="d-flex">
              <a href="hoa/update/{{this._id}}" class="mr-2">
                <button class="btn btn-primary">Sửa</button>             
              </a>
              <form method="POST" action="/hoa/remove/{{this._id}}?_method=DELETE">
                <button class="btn btn-danger" type="submit">Xóa</button>             
              </form>
            </td>
          </tr>
        {{/each}}
      </table>
    </main>
    